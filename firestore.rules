rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      allow read, create: if true;
      allow update, delete: if request.auth.uid == userId;
    }

    // Properties collection
    match /properties/{propertyId} {
      allow read: if true;
      allow create, update, delete: if request.auth.uid == resource.data.ownerId;
    }

    // Businesses collection
    match /businesses/{businessId} {
      allow read: if true;
      allow create, update, delete: if request.auth.uid == resource.data.ownerId;
    }

    // Content collection
    match /content/{contentId} {
      allow read: if true;
      allow create, update, delete: if request.auth.uid == resource.data.creatorId;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create, update: if request.auth.uid != null;
      allow delete: if request.auth.uid == resource.data.authorId;
    }

    // Bookings collection
    match /bookings/{bookingId} {
      allow read, update: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.hostId;
      allow create: if request.auth.uid != null;
      allow delete: if request.auth.uid == resource.data.clientId;
    }
  }
}